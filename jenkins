pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://git.your-repo-url.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("my-image")
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://your-registry-url', 'your-credentials-id') {
                        docker.push("my-image")
                    }
                }
            }
        }
    }
}
